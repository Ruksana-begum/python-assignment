import mysql.connector
mydb=mysql.connector.connect(host='localhost',user='root',password='Ameena&2808',database='Inventory_control')
cur=mydb.cursor()
f='select number_items from Manufacture m join good1 g on g.item_name=m.item_name where m.item_name="wooden table" AND g.mfd_date="23-04-01"'
cur.execute(f)
dis=cur.fetchall()
for x in dis:
    print(x)










